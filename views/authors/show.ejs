<div class="container">

<h2><%=author.name%></h2>
<a href='/authors/<%= id %>/edit'>Edit</a>
<form action='/authors/<%= id %>?_method=DELETE' method='POST'>
    <button type='submit'>Delete</button>
</form>

<% if(books.length > 0) {

    %>
        <h2>
            <%= author.name %> Books
        </h2>
        <% books.forEach(book=>{
            %>
            <h3>
                <%= book.title %>
            </h3>
            <a href='/books/<%= book.id %>'>
                <img height="450" width="350" src="<%= book.coverImagePath %>">
            </a>
            <h4>
                <%= book.description %>
            </h4>
            <h4>
                <%= book.publishDate.toDateString() %>
            </h4>
            <h4>
                <%= book.pages %>
            </h4>
            <h4>
                <%= book.createdAt.toDateString() %>
            </h4>
        <% }) %>
    <%

}%>

</div>
