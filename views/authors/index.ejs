<div class="container">

<h2>All Authors</h2>
<form action='/authors' method='GET'>
    <label for='name'>Name :</label>
    <input type='text' name='author' id='name' value='<%= searchName.author %>'>
    <button type='submit' class='btn'>Search</button>
</form>
<br>
<% authors.forEach(author =>{
    %>
        <h2><%= author.name %></h2>
        <div class='control-btns'>
            <a href='/authors/<%= author.id %>' class='btn'>View</a>
            <a href='/authors/<%= author.id %>/edit' class='btn'>Edit</a>
            
            <!-- override with POST having ?_method=DELETE  -->
            <form action='/authors/<%= author.id %>?_method=delete' method='POST'>
                <button type='submit' class='btn'>Delete</button>
            </form>
        </div>
    <%
})%>
</div>