<div class="container">

<h2>Add New Book</h2>
<form action='/books' method='POST'>
    <div>
        <label for='title'>title :</label>
        <input type='text' name='title' id='title' value='<%= book.title %>'/>
    </div>

    <div>
        <label for='author'>author :</label>
        <select name='author' id='author'>

            <% authors.forEach(author => {
                %>
                    <option value='<%= author.id %>'><%= author.name %></option>
                <%
            }) 
            %>
        </select>
    </div>

    <div>

        <label for="publish-date">publish date:</label>
        <input type='date' name='publishDate' id='publish-date' value='<%= book.publishDate%>'>
    </div>

    <div>

        <label for='pages'>page count:</label>
        <input type='number' name='pages' id='pages' min='1' value='<%= book.pages%>'>
    </div>

    <div>
        <label for='cover'>cover image</label>
        <input type='file' name='cover' class='filepond' id='cover' style="width:350px;height:450px">

    </div>

    <div>
        <label for='description'>description</label>
        <textarea name='description' id='description'><%= book.description %></textarea>
    </div>

    <div>
        <button type='submit' class='btn'>create</button>
        <button type='reset' class='btn'>Cancel</button>
    </div>
</form>
</div>