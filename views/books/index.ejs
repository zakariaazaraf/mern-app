
<div class="container">

    <h2>Search Book</h2>
    <form action='/books' methos='GET'>
        <div>
            <label for='title'>Title: </label>
            <input type='text' name='title' id='title' value='<%= searchName.title %>' autocomplete="off">
        </div>

        <div> 
            <label for='publishAfter'>Published after :</label>
            <input type='date' name='publishAfter' id='publishAfter' value=''>
        </div>

        <div> 
            <label for='publishBefore'>Published before :</label>
            <input type='date' name='publishBefore' id='publishBefore' value=''>
        </div>
        <button type='submit' class='btn'>Search</button>
    </form>

    <div class='books-container'>
        <% books.forEach(book=>{
            %>
            <div class='book'>
                <a href='/books/<%= book.id %>'>
                    <img src="<%= book.coverImagePath %>">
                </a>
                <h3>
                    <%= book.title %>
                </h3>
                <h4 class='author'>
                    <span class='date'>
                        <%= book.publishDate.toDateString() %>
                    </span>
                </h4>
            </div>
    
            <% })%>
    </div>
</div>

